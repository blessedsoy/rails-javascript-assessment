<h1 class="center" style="margin-top: 40px">Summer Sample Sales in NYC</h1>
<br>

<div class="table-box centered-box2">

  <table class="table table-hover">
    <thead class="thead-inverse">
      <tr>
        <th>#</th>
        <th>Brand</th>
        <th>Dates</th>
        <th>Address</th>
        <th>Like</th>
        <th>Total</th>
        <th>Dislike</th>
        <th>Total</th>
      </tr>
    </thead>
    
    <tbody>
      <%= form_for @list, url: lists_path do |f|%>
        <% @sample_sales.each do |sample_sale| %>
      <tr>
        <td scope="row">
          <% if  sample_sale.is_not_in_lists_of(current_user) %>
            
            <%= check_box_tag "sample_sales_ids[]", sample_sale.id %>
          <% end %>
        </td>
       
          <%= render partial: "link", locals: {sample_sale: sample_sale} %>

        <td>
          <%= render partial: "like", locals: {sample_sale: sample_sale} %>
        </td>

        <td class="total"><%= sample_sale.total_likes %></td>

        <td>
          <%= render partial: "dislike", locals: {sample_sale: sample_sale} %>   
        </td>

        <td class="total2"><%= sample_sale.total_dislikes %></td>
        
      </tr>
        <% end %>
        <div class="left"> 
          <%= f.submit "Add to my list", class:"btn btn-default addToList"%>
        </div>
      <% end %>

      <div class="btn-group right">
          <%= link_to "Sort By Dates", sample_sales_path, method: :get, class:"btn btn-default"%>
          <%= link_to "Sort By Likes", sort_by_likes_path, method: :get, class:"btn btn-default"%>    
      </div>

    </tbody>
  </table>

</div>


